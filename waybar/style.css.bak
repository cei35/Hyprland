* {
  font-family: "JetBrainsMono Nerd Font", monospace;
  font-size: 10px;
  color: #ffffff;
  margin-left: 10px;
  margin-right: 10px;
}

window {
  background: rgba(20, 20, 20, 0.9);
  border-radius: 10px;
  padding: 5px 10px;
  border: 1px solid #333333;
}

#clock, #network, #battery {
  padding: 0 10px;
  margin: 0 5px;
  border-radius: 5px;
  background: rgba(40, 40, 40, 0.8);
}

#clock:hover, #network:hover, #battery:hover {
  background: rgba(70, 70, 70, 0.9);
}

#cpu {
  padding: 0 10px;
  background: linear-gradient(90deg, #ff6347, #ffa07a);
  border-radius: 5px;
  margin: 0 5px;
}

#network {
  color: #87cefa;
}

#network.disconnected {
  color: #ff4500;
}

#battery {
  color: #32cd32;
}

#battery.critical {
  color: #ff0000;
  font-weight: bold;
}

#workspaces button {
  padding: 5px 10px;
  margin: 0 2px;
  background: rgba(50, 50, 50, 0.8);
  border-radius: 5px;
  color: #ffffff;
  border: none;
  font-weight: bold;
}

#workspaces button.focused {
  background: #1e90ff;
  color: #ffffff;
}

#workspaces button:hover {
  background: rgba(70, 70, 70, 0.9);
}

.separator {
  margin: 0 5px;
  border-left: 1px solid #444444;
}
